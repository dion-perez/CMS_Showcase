<!--Post Index-->
<div class="container">
    <div class="alert alert-secondary text-center">
        <h1>All Posts</h1>
    </div>

    <table class="table table-bordered ">
        <thead class="bg-dark text-center">
        <tr class="text-white">
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>CommentAllowed</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody class="text-center">
        <!-- Helper function #each-->
        {{#each posts}}
            <tr>
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>{{status}}</td>
                <td>{{allowComments}}</td>
                <td class="d-flex">
                    <a href="/admin/posts/edit/{{id}}" class="btn btn-sm btn-info mr-2"/>Edit Post</a>
                    <form action="/admin/posts/delete/{{id}}?_method=DELETE" method="post">
                        <button class="btn btn-sm btn-danger" type="submit">Delete Post</button>
                    </form>
                </td>
            </tr>
        {{/each}}
        </tbody>
        </thead>
    </table>

</div>
